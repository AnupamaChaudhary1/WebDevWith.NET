@page "/courses"
@model CoursesModel
<h2>List of all Courses</h2>
<a href="/courses/create"class="btn btn-success"><i class="bi bi-plus-lg"></i>new courses</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Textbook</th>
      <th scope="col">Credit Hours</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  @{
    int counter=1;
  }
    @foreach(var course in Model.Courses)
    {
        <tr>
            <th scope="row">@(counter++)</th>
            <td>@course.Name</td>
            <td>@course.TextBook</td>
            <td>@course.CreditHrs</td>   
            <td>
                <a href="/courses/edit/@course.Id" class="btn btn-warning"><i class="bi bi-pencil"></i> Edit</a>
                <a href="/courses/delete/@course.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?')"><i class="bi bi-trash"></i> Delete</a>
            </td>        
        </tr>   
    }    
  </tbody>
</table>

